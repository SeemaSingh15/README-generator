{
    "name": "godforge-readme-agent",
    "displayName": "GodForge â€” README Agent",
    "description": "Button-based README generator with snapshot-based undo",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "godforge-container",
                    "title": "Documentation",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "godforge-container": [
                {
                    "type": "webview",
                    "id": "godforge-sidebar",
                    "name": "ðŸ“„ Documentation"
                }
            ]
        },
        "commands": [
            {
                "command": "godforge.openPanel",
                "title": "GodForge: Open README Generator",
                "category": "Documentation"
            }
        ],
        "configuration": {
            "title": "GodForge README Agent",
            "properties": {
                "godforge.geminiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Google Gemini API Key",
                    "scope": "machine"
                },
                "godforge.readmeLength": {
                    "type": "string",
                    "enum": [
                        "short",
                        "medium"
                    ],
                    "default": "medium",
                    "description": "README length preference"
                },
                "godforge.includeBadges": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include badges in README"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}